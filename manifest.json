{
    "name": "Silverbullet Clipper",
    "version": "0.1.0",
    "manifest_version": 3,
    "description": "Creates a new page in the Inbox and either adds the web page link or the selected content",
    "background": {
        "service_worker": "js/service-worker.js"
    },
    "action": {
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "permissions": ["activeTab", "scripting","storage","offscreen"],
    "host_permissions": [
        "*://*/*"
    ]
}
